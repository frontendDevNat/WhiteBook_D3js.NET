@model IEnumerable<WhiteBook.Models.DangerYear>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Danger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Danger.Descr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-dangerid="@item.DangerId" asp-route-yearId="@item.YearId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-dangerid="@item.DangerId" asp-route-yearId="@item.YearId">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>