</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.png">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    @*
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    *@

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Справочники
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            @*
                            <a class="dropdown-item" asp-controller="Countries" asp-action="Index">Страны</a>
                            <a class="dropdown-item" asp-controller="Religions" asp-action="Index">Религии</a>
                            <a class="dropdown-item" asp-controller="Confessions" asp-action="Index">Конфесси</a>

                            <a class="dropdown-item" asp-controller="GermanyRegions" asp-action="Index">Земли Германии</a>
                            <a class="dropdown-item" asp-controller="GermanyCities" asp-action="Index">Города Германии</a>
                            <a class="dropdown-item" asp-controller="TerroristAttackTypes" asp-action="Index">Типы террористических атак</a>
                            <a class="dropdown-item" asp-controller="CyberThreatTypes" asp-action="Index">Типы кибер атак</a>
                            <a class="dropdown-item" asp-controller="PoliticalPartiesMovements" asp-action="Index">Политические партии, движения</a>
                            <a class="dropdown-item" asp-controller="RadicalOrganizations" asp-action="Index">Радикальные организации</a>
                            <a class="dropdown-item" asp-controller="TerroristAttacks" asp-action="Index">Террористические атаки</a>
                            <a class="dropdown-item" asp-controller="CyberThreats" asp-action="Index">Кибер атаки</a>
                            <a class="dropdown-item" asp-controller="MigrationFlows" asp-action="Index">Миграционные потоки</a>
                            *@

                            <a class="dropdown-item" asp-controller="Dangers" asp-action="Index">Опасности</a>
                            <a class="dropdown-item" asp-controller="DangerYears" asp-action="Index">Опасности по годам</a>
                            <a class="dropdown-item" asp-controller="DangerYears" asp-action="BasicBarChart">Графики опасности по годам</a>
                        </div>
                    </li>

                </ul>

                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <header class="header">
        <div class="container">
            <div class="row ">
                <p class="h2">Система национальной безопасности Республики Германия</p>
            </div>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>


    <div class="copyright">
        <div class="container">
            <div>
                <img src="~/images/logo.png" alt="">
                <p> &copy;Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
            </div>
        </div>
    </div>


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/d3/d3.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/d3/d3.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

